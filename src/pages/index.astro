---
import { Font } from 'astro:assets';
import { ClientRouter } from 'astro:transitions';
import { shows } from '../config/shows';
import Player from '../components/Player';
import '../styles/global.css';
---

<!doctype html>
<html lang="en" dir="ltr" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#1a1a1a" />

    <title>Daily Tech Feed</title>
    <meta name="description" content="AI-generated podcasts covering tech, weather, and more." />
    <meta property="og:title" content="Daily Tech Feed" />
    <meta property="og:description" content="AI-generated podcasts covering tech, weather, and more." />
    <meta property="og:url" content={new URL('/', Astro.site).toString()} />
    <meta property="og:type" content="website" />

    <Font cssVariable="--astro-font-inter" preload />
    <ClientRouter />
  </head>
  <body class="font-inter bg-dark-background text-dark-text-body antialiased">
    <div class="min-h-screen flex flex-col">
      <main class="flex-1 flex flex-col items-center justify-center px-6 py-16 lg:py-24">
        <div class="max-w-3xl w-full text-center mb-16">
          <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4">
            Daily Tech Feed
          </h1>
          <p class="text-lg text-dark-text-body max-w-xl mx-auto">
            AI-generated podcasts covering tech, weather, and more
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl w-full">
          {shows.map((show) => (
            <a
              href={show.basePath}
              class="group bg-dark-card rounded-xl overflow-hidden border border-dark-border hover:border-[oklch(45.84%_0.078_281.04)] transition-colors duration-300"
            >
              <div class="aspect-square overflow-hidden">
                <img
                  src={`https://pod.c457.org${show.basePath}/artwork.jpg`}
                  alt={show.title}
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <h2 class="text-xl font-bold text-white mb-2 group-hover:text-[oklch(71.44%_0.15_250)] transition-colors">
                  {show.title}
                </h2>
                <p class="text-dark-text-body mb-4 text-sm leading-relaxed">
                  {show.blurb}
                </p>
                <span class="inline-flex items-center gap-2 text-sm font-semibold text-white bg-dark-button px-4 py-2 rounded-lg group-hover:bg-[oklch(28%_0.05_281)] transition-colors">
                  Listen
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </main>

      <footer class="text-center py-8 text-sm text-dark-text-body opacity-60">
        A Daily Tech Feed production &bull; pod.c457.org
      </footer>
    </div>
    <Player client:only="preact" transition:persist="player" />
  </body>
</html>
